<cas:producttypes xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <type id="urn:xdata:EmploymentJobAggregatesTsv" name="EmploymentJobAggregatesTsv">
    <repository path="file://[XDATA_EMPLOYMENT_HOME]/data/staging"/>
    <versioner class="org.apache.oodt.cas.filemgr.versioning.InPlaceVersioner"/>
    <description>XDATA Employment data starting TSV file.</description>
    <metExtractors>
      <extractor
        class="org.apache.oodt.cas.filemgr.metadata.extractors.CoreMetExtractor">
        <configuration>
          <!-- you can optionally include the envReplace tag to turn on/off environment var replacement -->
          <property name="nsAware" value="true" />
          <property name="elementNs" value="CAS" />
          <property name="elements"
            value="ProductReceivedTime,ProductName,ProductId" />
        </configuration>
      </extractor>
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.MimeTypeExtractor" />
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.FinalFileLocationExtractor">
        <configuration>
           <property name="replace" value="true"/>
        </configuration>
      </extractor>
    </metExtractors>
  </type>
  
  <type id="urn:xdata:EmploymentJobAggregates" name="EmploymentJobAggregates">
    <repository path="file://[XDATA_EMPLOYMENT_HOME]/data/archive/employment_aggregate"/>
    <versioner class="org.apache.oodt.cas.filemgr.versioning.MetadataBasedFileVersioner"/>
    <description>A Json-based aggregated version of the jobs present in the XDATA employment TSV file.</description>
    <metExtractors>
      <extractor
        class="org.apache.oodt.cas.filemgr.metadata.extractors.CoreMetExtractor">
        <configuration>
          <!-- you can optionally include the envReplace tag to turn on/off environment var replacement -->
          <property name="nsAware" value="true" />
          <property name="elementNs" value="CAS" />
          <property name="elements"
            value="ProductReceivedTime,ProductName,ProductId" />
        </configuration>
      </extractor>
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.MimeTypeExtractor" />
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.FinalFileLocationExtractor">
        <configuration>
           <property name="replace" value="true"/>
        </configuration>
      </extractor>
    </metExtractors>
  </type>

  <type id="urn:xdata:EmploymentJob" name="EmploymentJob">
    <repository path="file://[XDATA_EMPLOYMENT_HOME]/data/archive/employment"/>
    <versioner class="org.apache.oodt.cas.filemgr.versioning.MetadataBasedFileVersioner"/>
    <description>Individual, per-job JSON files output from the repackager job running on XDATA employment JSON aggregate data.</description>
    <metExtractors>
      <extractor
        class="org.apache.oodt.cas.filemgr.metadata.extractors.CoreMetExtractor">
        <configuration>
          <!-- you can optionally include the envReplace tag to turn on/off environment var replacement -->
          <property name="nsAware" value="true" />
          <property name="elementNs" value="CAS" />
          <property name="elements"
            value="ProductReceivedTime,ProductName,ProductId" />
        </configuration>
      </extractor>
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.MimeTypeExtractor" />
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.FinalFileLocationExtractor">
        <configuration>
           <property name="replace" value="true"/>
        </configuration>
      </extractor>
    </metExtractors> 
  </type>

  <type id="urn:xdata:EmploymentJobTranslated" name="EmploymentJobTranslated">
    <repository path="file://[XDATA_EMPLOYMENT_HOME]/data/archive/employment_translated"/>
    <versioner class="org.apache.oodt.cas.filemgr.versioning.MetadataBasedFileVersioner"/>
    <description>The final, per job translated JSON XDATA employment data files, ready to ingest into Solr.</description>
    <metExtractors>
      <extractor
        class="org.apache.oodt.cas.filemgr.metadata.extractors.CoreMetExtractor">
        <configuration>
          <!-- you can optionally include the envReplace tag to turn on/off environment var replacement -->
          <property name="nsAware" value="true" />
          <property name="elementNs" value="CAS" />
          <property name="elements"
            value="ProductReceivedTime,ProductName,ProductId" />
        </configuration>
      </extractor>
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.MimeTypeExtractor" />
      <extractor class="org.apache.oodt.cas.filemgr.metadata.extractors.examples.FinalFileLocationExtractor">
        <configuration>
           <property name="replace" value="true"/>
        </configuration>
      </extractor>
    </metExtractors>
  </type>

</cas:producttypes>
